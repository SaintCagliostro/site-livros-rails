<%= content_for :title, "Gêneros" %>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gêneros - Biblioteca Mística</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
      :root {
          --primary-dark: #1a1a2e;
          --primary-blue: #16213e;
          --accent: #0f3460;
          --light-bg: rgba(255, 255, 255, 0.92);
          --glass-bg: rgba(255, 255, 255, 0.88);
          --border-light: rgba(0, 0, 0, 0.06);
          --text-primary: #1a202c;
          --text-secondary: #4a5568;
          --text-muted: #a0aec0;
      }

      * {
          box-sizing: border-box;
      }

      body {
          background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-blue) 50%, var(--accent) 100%);
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
          color: var(--text-primary);
          line-height: 1.6;
          min-height: 100vh;
          padding: 2rem 0;
          margin: 0;
      }

      .genres-container {
          max-width: 1400px;
          margin: 0 auto;
          padding: 0 1.5rem;
      }

      .hero-section {
          background: var(--light-bg);
          backdrop-filter: blur(20px);
          border: 1px solid var(--border-light);
          border-radius: 24px;
          padding: 3rem;
          text-align: center;
          margin-bottom: 2.5rem;
          box-shadow: 0 25px 70px rgba(0,0,0,0.15);
      }

      .hero-title {
          font-size: clamp(2rem, 4vw, 2.8rem);
          font-weight: 700;
          color: var(--text-primary);
          margin: 0 0 0.5rem 0;
          letter-spacing: -0.03em;
      }

      .hero-subtitle {
          color: var(--text-secondary);
          font-size: 1.2rem;
          font-weight: 500;
          margin: 0;
          opacity: 0.9;
          max-width: 700px;
          margin-left: auto;
          margin-right: auto;
      }

      .genres-grid {
          display: grid;
          grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
          gap: 2rem;
          margin-bottom: 3rem;
          list-style: none;
          padding: 0;
          align-items: start;
      }

      .genre-card {
          background: var(--light-bg);
          backdrop-filter: blur(20px);
          border: 1px solid var(--border-light);
          border-radius: 20px;
          padding: 0;
          transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
          box-shadow: 0 8px 25px rgba(0,0,0,0.1);
          position: relative;
          overflow: hidden;
          display: flex;
          flex-direction: column;
          height: 100%;
          min-height: 480px;
      }

      .genre-card::before {
          content: '';
          position: absolute;
          top: 0;
          left: -100%;
          width: 100%;
          height: 100%;
          background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
          transition: left 0.8s;
          z-index: 2;
      }

      .genre-card:hover {
          transform: translateY(-8px);
          box-shadow: 0 25px 50px rgba(0,0,0,0.2);
          border-color: rgba(15,52,96,0.2);
      }

      .genre-card:hover::before {
          left: 100%;
      }

      .genre-header {
          padding: 2rem 2rem 0 2rem;
          margin-bottom: 1.5rem;
          display: flex;
          align-items: center;
      }

      .genre-icon {
          font-family: 'Font Awesome 6 Free';
          font-weight: 900;
          color: var(--accent);
          margin-right: 0.75rem;
          font-size: 1.3rem;
          width: 28px;
          height: 28px;
          display: flex;
          align-items: center;
          justify-content: center;
          opacity: 0.9;
          flex-shrink: 0;
      }

      .genre-title {
          color: var(--text-primary);
          font-size: 1.25rem;
          font-weight: 600;
          letter-spacing: -0.02em;
          text-decoration: none;
          flex-grow: 1;
          line-height: 1.3;
          margin: 0;
      }

      .genre-title:hover {
          color: var(--accent);
      }

      .genre-content {
          padding: 0 2rem 2rem 2rem;
          flex-grow: 1;
          display: flex;
          flex-direction: column;
      }

      .books-list {
          list-style: none;
          padding: 0;
          margin: 0 0 1rem 0;
          flex-grow: 1;
      }

      .book-item {
          margin-bottom: 0.875rem;
          border-bottom: 1px solid rgba(0,0,0,0.05);
          padding-bottom: 0.875rem;
      }

      .book-item:last-child {
          margin-bottom: 0;
          padding-bottom: 0;
          border-bottom: none;
      }

      .book-link {
          color: var(--text-secondary);
          text-decoration: none;
          padding: 0.75rem 0;
          display: block;
          border-radius: 12px;
          font-weight: 500;
          transition: all 0.2s ease;
          font-size: 0.95rem;
          line-height: 1.4;
      }

      .book-link:hover {
          color: var(--accent);
          padding-left: 0.5rem;
          background: rgba(15,52,96,0.05);
      }

      .book-author {
          color: var(--text-muted);
          font-size: 0.85rem;
          display: block;
          margin-top: 0.25rem;
      }

      .more-books {
          margin-top: auto;
          padding-top: 1.25rem;
          border-top: 1px solid rgba(0,0,0,0.06);
      }

      .more-link {
          color: var(--accent);
          font-weight: 600;
          border-left: 2px solid var(--accent);
          padding-left: 1rem;
          text-decoration: none;
          font-size: 0.95rem;
          display: inline-block;
      }

      .more-link:hover {
          color: var(--primary-blue);
          text-decoration: underline;
      }

      .empty-genre {
          min-height: 240px;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          color: var(--text-muted);
          text-align: center;
          padding: 2rem;
      }

      .empty-genre i {
          font-size: 2.5rem;
          opacity: 0.3;
          margin-bottom: 1rem;
          width: 64px;
          height: 64px;
          display: flex;
          align-items: center;
          justify-content: center;
      }

      .empty-state {
          grid-column: 1 / -1;
          background: var(--light-bg);
          backdrop-filter: blur(20px);
          border: 1px solid var(--border-light);
          border-radius: 24px;
          box-shadow: 0 20px 60px rgba(0,0,0,0.15);
          min-height: 480px;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          text-align: center;
          padding: 4rem 2rem;
      }

      .empty-icon {
          font-size: 5rem;
          color: #cbd5e0;
          margin-bottom: 2rem;
      }

      .empty-title {
          color: #64748b;
          margin-bottom: 1rem;
          font-size: 1.5rem;
          font-weight: 600;
      }

      .empty-subtitle {
          color: #94a3b8;
          max-width: 500px;
          margin: 0 auto 2rem;
      }

      .action-btn {
          background: linear-gradient(135deg, var(--accent), var(--primary-blue));
          color: white;
          border-radius: 12px;
          padding: 0.875rem 1.75rem;
          font-weight: 600;
          text-decoration: none;
          transition: all 0.3s ease;
          display: inline-block;
          border: none;
          font-size: 1rem;
      }

      .action-btn:hover {
          transform: translateY(-2px);
          box-shadow: 0 15px 35px rgba(15,52,96,0.4);
          color: white;
      }

      .back-btn {
          background: var(--glass-bg);
          backdrop-filter: blur(15px);
          border: 1px solid rgba(0,0,0,0.08);
          color: var(--text-secondary);
          padding: 0.875rem 1.75rem;
          border-radius: 12px;
          font-weight: 500;
          text-decoration: none;
          font-size: 0.95rem;
          transition: all 0.3s ease;
          display: inline-block;
      }

      .back-btn:hover {
          background: rgba(255,255,255,0.95);
          color: var(--text-primary);
          transform: translateY(-2px);
          box-shadow: 0 15px 35px rgba(0,0,0,0.15);
      }

      p[style*="color: green"] {
          background: rgba(34, 197, 94, 0.1) !important;
          border: 1px solid rgba(34, 197, 94, 0.3) !important;
          border-radius: 8px !important;
          padding: 0.75rem 1rem !important;
          margin-bottom: 1.5rem !important;
          color: #059669 !important;
          font-weight: 500 !important;
      }

      @media (max-width: 1400px) {
          .genres-grid {
              grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
              gap: 1.75rem;
          }
      }

      @media (max-width: 1200px) {
          .genres-grid {
              grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
          }
      }

      @media (max-width: 768px) {
          .genres-container {
              padding: 0 1rem;
          }

          .genres-grid {
              grid-template-columns: 1fr;
              gap: 1.75rem;
          }

          .hero-section {
              padding: 2rem 1.5rem;
          }

          .genre-card {
              min-height: 460px;
          }

          .genre-card:hover {
              transform: translateY(-4px);
          }
      }

      @media (max-width: 480px) {
          .genres-grid {
              gap: 1.5rem;
          }

          .genre-card {
              min-height: 440px;
          }
      }
  </style>
</head>
<body>
<div class="genres-container">
  <section class="hero-section">
    <h1 class="hero-title">Gêneros Literários</h1>
    <p class="hero-subtitle">
      Explore nossa coleção categorizada por gêneros da literatura mística e esotérica
    </p>
  </section>

  <% if @generos.any? %>
    <ul class="genres-grid">
      <% @generos.each do |genero| %>
        <li>
          <div class="genre-card">
            <div class="genre-header">
              <i class="fas fa-book-open genre-icon"></i>
              <%= link_to genero.name, genero_path(genero), class: "genre-title" %>
            </div>

            <div class="genre-content">
              <% if genero.books %>
                <% if genero.books.any? %>
                  <ul class="books-list">
                    <% genero.books.first(4).each do |book| %>
                      <li class="book-item">
                        <%= link_to truncate(book.name, length: 50), book_path(book), class: "book-link" %>
                        <small class="book-author">
                          <%= book.author.name rescue 'Autor desconhecido' %>
                        </small>
                      </li>
                    <% end %>
                  </ul>
                  <% if genero.books.size > 4 %>
                    <div class="more-books">
                      <%= link_to "Ver todos os livros (#{genero.books.size})", genero_path(genero), class: "more-link" %>
                    </div>
                  <% end %>
                <% else %>
                  <div class="empty-genre">
                    <i class="fas fa-book"></i>
                    <div style="font-size: 1.1rem; margin-top: 0.5rem;">Nenhum livro neste gênero</div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="empty-state">
      <div class="empty-icon">
        <i class="fas fa-folder-open"></i>
      </div>
      <h3 class="empty-title">Nenhum gênero cadastrado</h3>
      <p class="empty-subtitle">
        A biblioteca ainda não possui gêneros organizados. Crie o primeiro!
      </p>
      <%= link_to "Novo Gênero", new_genero_path, class: "action-btn" %>
    </div>
  <% end %>

  <div style="text-align: center; padding-bottom: 2rem;">
    <%= link_to "← Voltar", root_path, class: "back-btn" %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
